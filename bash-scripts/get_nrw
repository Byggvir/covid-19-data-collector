#/bin/bash

# This bash script collects the data from Nordrhein-Westfalen (NRW), DEU

DATUM=$( date +%Y%m%d%H%M)

( echo "Kreis,Fälle" ;
wget -O - https://www.mags.nrw/coronavirus-fallzahlen-nrw \
| sed '1,/<th scope="col">Bestätigte Fälle<\/th>/d; /<\/tr><\/tbody><\/table>/,$d' \
| sed 'N;s/\n/,/;s#<[^>]*>##g;' \
| sed 's#,-#,0#; s#\&amp;#\&#g' ) \
> ../data/nrw-$DATUM.csv
